apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv2
spec:
  storageClassName: standard
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: "800Mi"
  hostPath:
    path: /demo1
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc2
spec:
  storageClassName: standard
  volumeName: pv2
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: "800Mi"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: weifit-calcii
spec:
  replicas: 1
  selector:
    matchLabels:
      tier: mac
  template:
    metadata:
      labels:
        tier: mac
    spec:
      serviceAccountName: development
      terminationGracePeriodSeconds: 20
      priorityClassName: fitnesspriority
      containers:
        - name: image2
          image: furkhan2000/fitness-tracker-app:weifit-calculator
          imagePullPolicy: Always 
          ports:
            - containerPort: 4040
          volumeMounts:
            - name: store
              mountPath: /pvc-data1
          resources:
            requests:
              cpu: "700m"
              memory: "500Mi"
          livenessProbe:
            tcpSocket:
              port: 4040
            initialDelaySeconds: 5
            periodSeconds: 10
      volumes:
        - name: store
          persistentVolumeClaim:
            claimName: pvc2
---
apiVersion: v1
kind: Service
metadata:
  name: svc2
spec:
  selector:
    tier: mac
  ports:
    - port: 4040
      protocol: TCP
      targetPort: 4040
--- 
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: fitness-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: ""
spec:
  ingressClassName: nginx
  rules:
    - http:
        paths:
          - path: /workouts
            pathType: Prefix
            backend:
              service:
                name: svc1
                port:
                  number: 5000
          - path: /weifit-calculator
            pathType: Prefix
            backend:
              service:
                name: svc2
                port:
                  number: 4040
